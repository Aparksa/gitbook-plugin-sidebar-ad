{
    "name": "gitbook-plugin-sidebar-ad",
    "version": "0.0.2",
    "description": "GitBook plugin for adding a small ad in the sidebar of your book",
    "engines": {
        "gitbook": ">=3.0.0"
    },
    "license": "BSD",
    "repository": {
      "type": "git",
      "url": "https://github.com/olasitarska/gitbook-plugin-sidebar-ad.git"
    },
    "gitbook": {
        "properties": {
            "imageUrl": {
                "type": "string",
                "description": "URL to image displayed in the ad",
                "required": true
            },
            "url": {
                "type": "string",
                "description": "Promoted URL"
            },
            "description": {
                "type": "string",
                "description": "Description next to the image"
            },
            "btnText": {
                "type": "string",
                "description": "Text for the call to action button"
            }
        }
    }
}
